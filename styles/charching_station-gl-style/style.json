{
  "version": 8,
  "name": "Charching Stations",
  "sources": {
    "charging_station": {
      "type": "vector",
      "url": "mbtiles://{charching_station}"
    }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "charging_station_cluster",
      "type": "circle",
      "source": "charging_station",
      "source-layer": "charching_station",
      "filter": ["all", ["==", "clustered", true]],
      "paint": {
        "circle-color": "rgba(25, 0, 255, 1)",
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          1,
          5,
          14,
          ["max", ["*", ["get", "sqrt_point_count"], 2], 10]
        ]
      }
    },
    {
      "id": "charging_station_cluster_number",
      "type": "symbol",
      "source": "charging_station",
      "source-layer": "charching_station",
      "minzoom": 10,
      "filter": ["all", ["==", "clustered", true]],
      "layout": {
        "text-field": ["get", "point_count"],
        "icon-size": 1,
        "text-size": 12,
        "text-allow-overlap": true,
        "text-ignore-placement": true,
        "text-font": ["Open Sans Regular"]
      },
      "paint": {
        "text-color": "rgba(255, 255, 255, 1)",
        "text-halo-color": "rgba(25, 0, 255, 1)",
        "text-halo-width": 1
      }
    },
    {
      "id": "charging_station_cluster_label",
      "type": "symbol",
      "source": "charging_station",
      "source-layer": "charching_station",
      "minzoom": 10,
      "filter": ["all", ["==", "clustered", true]],
      "layout": {
        "text-field": ["coalesce", ["get", "network"], ["get", "operator"]],
        "icon-size": 1,
        "text-size": 12,
        "text-allow-overlap": false,
        "text-ignore-placement": false,
        "text-anchor": "top",
        "text-font": ["Open Sans Regular"]
      },
      "paint": {
        "text-color": "rgba(25, 0, 255, 1)",
        "text-halo-color": "rgba(255, 255, 255, 1)",
        "text-halo-width": 1,
        "text-translate": [0, 10]
      }
    },
    {
      "id": "charging_station",
      "type": "circle",
      "source": "charging_station",
      "source-layer": "charching_station",
      "filter": ["all", ["!=", "clustered", true]],
      "paint": {
        "circle-color": "rgba(25, 0, 255, 1)",
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          1,
          5,
          14,
          ["max", ["*", ["get", "sqrt_point_count"], 2], 10]
        ]
      }
    },
    {
      "id": "charging_station_label",
      "type": "symbol",
      "source": "charging_station",
      "source-layer": "charching_station",
      "minzoom": 10,
      "filter": ["all", ["!=", "clustered", true]],
      "layout": {
        "text-field": ["coalesce", ["get", "network"], ["get", "operator"]],
        "icon-size": 1,
        "text-size": 12,
        "text-allow-overlap": false,
        "text-ignore-placement": false,
        "text-anchor": "top",
        "text-font": ["Open Sans Regular"]
      },
      "paint": {
        "text-color": "rgba(25, 0, 255, 1)",
        "text-halo-color": "rgba(255, 255, 255, 1)",
        "text-halo-width": 1,
        "text-translate": [0, 6]
      }
    }
  ],
  "id": "charching_station"
}
